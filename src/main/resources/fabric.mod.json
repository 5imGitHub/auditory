{
  "schemaVersion": 1,
  "id": "auditory",
  "version": "${version}",

  "name": "Auditory",
  "description": "A mod that expands and improves upon the sound and audio aspects of Minecraft!",
  "authors": [
    "Sydokiddo"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/auditory",
    "sources": "https://github.com/Sydokiddo/auditory"
  },

  "license": "MIT",
  "icon": "assets/auditory/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.sydokiddo.auditory.Auditory"
    ],
    "client": [
      "net.sydokiddo.auditory.AuditoryClient"
    ],
    "modmenu": [
      "net.sydokiddo.auditory.config.ModMenuCompatibility"
    ]
  },
  "mixins": [
    "auditory.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.3",
    "fabric": "*",
    "minecraft": "1.19.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}